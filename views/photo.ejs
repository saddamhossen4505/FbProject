

<div class="profile-body">

    <div class="profile-wraper">
        <div class="profile-info">
            <%- include ("layouts/userInfo.ejs") %>
            <hr>
            
            <%- include ("layouts/menu.ejs") %>  

        </div>
        <div class="profile-box"> 
            <div class="box-content">
               <h2>Change Photo</h2>
               <% if (message) { %>
                    <p><%= message %> </p>
               <% } %>
                <hr>
                <div class="form-wraper">
                    <form action="/user/profile_photo" method="POST" enctype="multipart/form-data">
                        
                        <div class="form-group">
                            <label for="">Select a Photo</label>
                            <div class="profile_photo">
                                
                                <% if ( user.photo ) { %>
                                    <img style="border-radius: 50%; padding: 5px; border: 2px solid rgb(232, 100, 208); object-fit: cover;" id="profile_photo_preview" src="/images/userPhoto/<%= user.photo %> " alt="">
                                <% } else { %>
                                    <img id="profile_photo_preview" src="/assets/images/avatar.png " alt="">
                                <% } %>
                                
                            </div>
                            <label class="upload">
                                <i class="fa fa-photo uplaod"></i>
                                <input id="profile_photo_upload" name="profile" style="display:none;" type="file">
                            </label>
                        </div>
                        <div class="form-group">
                            <button type="submit" >Change</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>