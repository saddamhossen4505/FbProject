
<div class="profile-body">

    <div class="profile-wraper">
        <div class="profile-info">
            <%- include ("layouts/userInfo.ejs") %>
            <hr>
            
            <%- include ("layouts/menu.ejs") %>  

        </div>
        <div class="profile-box"> 
            <div class="box-content">
               <h2>Gallery-Photo</h2>
               <% if (message) { %>
                    <p><%= message %> </p>
               <% } %>
                <hr>
                <div class="form-wraper">
                    <form action="/user/gallery_photo" method="POST" enctype="multipart/form-data">
                        
                        <div class="form-group">
                            <label for="">Select Gallery-Photo</label>
                            <hr>
                            <div class="gallery_photo">
                                
                                
                            </div>
                            <hr>
                            <label class="upload">
                                <i class="fa fa-photo uplaod"></i>
                                <input id="gallery_photo_upload" name="gallery" multiple style="display:none;" type="file">
                            </label>
                        </div>
                        <div class="form-group">
                            <button type="submit" >Upload</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>